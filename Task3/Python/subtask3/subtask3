def print_diamond(n):
    # Print the top half of the diamond
    for i in range(n):
        print(' ' * (n - i - 1) + '*' * (2 * i + 1))
    
    # Print the bottom half of the diamond
    for i in range(n - 2, -1, -1):
        print(' ' * (n - i - 1) + '*' * (2 * i + 1))

if __name__ == "__main__":
    n = int(input("Enter a number: "))
    print_diamond(n)
